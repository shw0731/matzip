<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
      <!-- 용량제한 100MB로 설정 -->
      <constant name = "struts.multipart.maxSize" value = "104857600" />
 
      <package name = "notice" extends = "struts-default">

  
            <!-- 게시판 리스트 액션 -->
            <action name = "listAction" class = "notice.NO_listAction">
                  <result>/common/notice/noticeList.jsp</result>
            </action>
  
            <!-- 게시판 쓰기 액션 -->
            <action name = "writeForm" class = "notice.NO_writeAction" method = "form">
                  <result>/common/notice/noticeWrite.jsp</result>
            </action>
  
            <action name = "writeAction" class = "notice.NO_writeAction">
                  <result type = "redirect-action">
                        <param name = "actionName">listAction</param>
                  </result>
            </action>
  
            <!-- 게시판 상세보기 액션 -->
           <action name = "viewAction" class = "notice.NO_viewAction">
                  <result>/common/notice/noticeView.jsp</result>
           </action>
           
                       <!-- 게시판 수정 액션 -->
            <action name = "modifyForm" class = "notice.NO_viewAction">
                  <result type = "chain">writeForm</result>
            </action>
  
            <action name = "modifyAction" class = "notice.NO_modifyAction">
                  <result type = "chain">viewAction</result>
            </action>
            
                        <!-- 게시판 삭제 액션 -->
            <action name = "deleteAction" class = "notice.NO_deleteAction">
                  <result type = "chain">listAction</result>
            </action>
      </package>
</struts>